@model TestApp.Mvc.Models.UpdateDrinkDto



<form asp-action="Update" enctype="multipart/form-data" id="formUpdateDrink">

    <input asp-for="Id" hidden />
    
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        
        <div class="form-group col-md-4">
            <label asp-for="@Model.Quantity" class="col-form-label"></label>
            <input class="form-control" min="1" asp-for="@Model.Quantity" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Price" class="col-form-label"></label>
            <input class="form-control" min="1" asp-for="@Model.Price" />
        </div>
    </div>


    <p></p>
    <button class="btn btn-primary">Отправить</button>
</form>



<style>
    label {
        color: black;
    }
</style>
@section pageScripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}